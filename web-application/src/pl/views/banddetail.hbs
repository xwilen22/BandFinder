<section class="row container-fluid">
    <img src="/images/PLACEHOLDER.jpg" class="col-md-2 rounded img-thumbnail img-fluid">
    <div class="col-md-auto p-2">
        <h2>{{bandname}}</h2>
        <p class="text-break">
            {{biography}}
        </p>
    </div>
    {{#if isCurrentUserBandLeader}}
     <div>
        <a class="btn btn-primary" href="/bands/update/{{bandId}}">EDIT</a>
    </div>
    {{/if}}
</section>
<section class="row container-fluid p-4">
    <p class="h3">Members</p>
    <div class="col-12">
        <ul class="list-unstyled list-inline">
            {{#each bandMembers}}
            <li class="list-inline-item">
                <div class="card membercard">
                    <img src="/images/PLACEHOLDER.jpg" class="card-img-top">
                    <div class="card-body">
                        <h5 class="card-title"><a href="/account/view/{{this.username}}">{{this.username}}</a></h5>
                        {{#if this.is_band_leader}}
                        <p class="text-break">Band Leader</p>
                        {{/if}}
                    </div>
                </div>
            </li>
            {{/each}}
        </ul>
    </div>
</section>