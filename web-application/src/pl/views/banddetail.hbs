<section class="row container-fluid">
    <img src="/images/PLACEHOLDER.jpg" class="img-thumbnail img-fluid band-detail-image">
    <div class="col p-2">
        <h2>{{bandname}}</h2>
        <p class="text-break">
            {{biography}}
        </p>
    </div>
    {{#if isCurrentUserBandLeader}}
     <div class="col">
        <a class="btn btn-primary" href="/bands/update/{{bandId}}">EDIT</a>
        <ul class="list-group">
            {{#each bandApplications}}
            <li class="list-group-item">
                <a href="/account/view/{{this.username}}">{{this.username}}</a> wants to join!
                <div class="float-right">
                    <form method="POST" action="/bands/addMember/{{../bandId}}">
                        <input type="submit" value="Accept" class="btn btn-success">
                        <input type="hidden" value="{{this.username}}" name="username">
                        <input type="hidden" value="{{../csrfToken}}" name="_csrf">
                    </form>
                    <form method="POST" action="/applications/delete/{{this.username}}/{{this.band_id}}">
                        <input type="submit" value="Deny" class="btn btn-danger">
                        <input type="hidden" value="{{../csrfToken}}" name="_csrf">
                    </form>
                </div>
            </li>
            {{/each}}
        </ul>
    </div>
    {{/if}}
</section>
<section class="row container-fluid p-4">
    <p class="h3">Members</p>
    <div class="col-12">
        <ul class="list-unstyled list-inline">
            {{#each bandMembers}}
            <li class="list-inline-item">
                <div class="card membercard">
                    <img src="/images/PLACEHOLDER.jpg" class="card-img-top">
                    <div class="card-body">
                        <h5 class="card-title"><a href="/account/view/{{this.username}}">{{this.username}}</a></h5>
                        {{#if this.is_band_leader}}
                        <p class="text-break">Band Leader</p>
                        {{/if}}
                    </div>
                </div>
            </li>
            {{/each}}
        </ul>
    </div>
</section>