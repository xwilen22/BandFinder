<h2>Browse</h2>
<section class="row container-fluid">
    <form class="form-inline" method="GET" action="/bands/search">
        <input type="text" placeholder="Search band title" class="form-control" name="bandName">
        <label for="sortBy" class="mx-sm-2">By genre</label>
        {{#if genres}}
        <select name="genreName" id="genre">
        <option value="">All genres</option>
        {{#each genres}}
        <optgroup label={{this.headGenreName}}>
            {{#each this.subGenres}}
            <option value={{this}}>{{this}}</option>
            {{/each}}
        </optgroup>
        {{/each}}
        </select>
        {{/if}}
        <input type="submit" class="btn btn-primary mx-sm-2" value="Search">
    </form>
</section>
<section class="row p-2">
    <ul class="list-group w-100">
        {{#if bands}}
        {{#each bands}}
        <li class="list-group-item row m-sm-2 container w-100">
            <div class="row p-2">
                <img class="col-2 img-thumbnail m-0" src="/images/PLACEHOLDER.JPG">
                <div class="col m-0">
                    <p class="h3">{{this.band_name}}</p>
                    <p class="text-break">{{this.band_biography}}</p>
                    <p>Members -1/{{this.max_members}}</p>
                    <a href="bands/view/{{this.id}}" class="stretched-link"></a>
                </div>
            </div>
            {{#if ../loggedInUsername}}
                {{#each ../memberships}}
                    {{#if (compare this.band_id "==" ../id)}}
                    <div class="alert alert-success" role="alert">
                        Member of this band
                    </div>
                    {{/if}}
                {{/each}}
                {{#each ../applications}}
                    {{#if (compare this.band_id "==" ../id)}}
                    <div class="alert alert-success" role="alert">
                        Applied!
                    </div>
                    {{/if}}
                {{/each}}
                <form method="POST" action="applications/create/{{../loggedInUsername}}/{{this.id}}">
                    <input type="submit" value="Apply" class="btn btn-success">
                    <input type="hidden" value="{{../csrfToken}}" name="_csrf">
                </form>
            {{/if}}
        </li>
        {{/each}}
        {{else}}
        <p>No bands here!</p>
        {{/if}}
    </ul>
</section>