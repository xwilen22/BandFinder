<h2>{{username}}</h2>
<section class="row container-fluid">
    <div>
        <a class="btn btn-danger" href="/account/delete/{{loggedInUsername}}">Delete</a>
    </div>
    <div class="col-md-12 p-2 row">
        <img class="img-thumbnail membercard" src="/images/PLACEHOLDER.jpg">
        <form method="POST" class="form-group col-md-10">
            <section>
                <label class="keepaspectratio" for="thumbImageSelect">Replace profile image</label>
                <input class="form-control" type="file">
            </section>
            <label for="bioEditText">Bio</label>
            <textarea class="form-control" type="text" id="bioEditText" name="biography" rows="4">{{biography}}</textarea>

            <input class="btn btn-primary" type="submit" value="Save changes">
            <input type="hidden" value="{{csrfToken}}" name="_csrf">
        </form>
    </div>
</section>
{{#if instruments}}
<section class="row container-fluid">
    <form method="POST" class="form-group" action="/proficiencies/create/{{username}}">
        <label for="instrumentSelect">Instrument</label>
        <select id="instrumentSelect" name="instrument">
            {{#each instruments}}
            <option>{{this}}</option>
            {{/each}}
        </select>
        <label for="skillLevelNumber">Skill level</label>
        <input type="number" min="1" , max="5" value="1" id="skillLevelNumber" name="skillLevel">
        <input class="btn btn-secondary" type="submit" value="Add proficiency">
        <input type="hidden" value="{{csrfToken}}" name="_csrf">
    </form>
</section>
{{/if}}
<section class="row container-fluid p-4">
    <p class="h3">Proficiencies</p>
    <div class="col-12">
        {{#if proficiencies}}
        <ul class="list-unstyled list-inline">
            {{#each proficiencies}}
            <li class="list-inline-item bg-light p-2">
                <div class="inline">
                    {{this.instrument_name}} 
                    <form method="POST" action="/proficiencies/update/{{username}}/{{this.instrument_name}}">
                        <input type="number" min="1" , max="5" value="{{this.proficiency_level}}" name="skillLevel">
                        <input type="submit" value="Update skill" class="btn btn-primary">
                        <input type="hidden" value="{{../csrfToken}}" name="_csrf">
                    </form>
                    <form method="POST" action="/proficiencies/delete/{{username}}/{{this.instrument_name}}">
                        <input type="submit" value="Delete" class="btn btn-warning">
                        <input type="hidden" value="{{../csrfToken}}" name="_csrf">
                    </form>
                </div>
            </li>
            {{/each}}
        </ul>
        {{else}}
        <p>Nothing here but us rats!</p>
        {{/if}}
    </div>
</section>