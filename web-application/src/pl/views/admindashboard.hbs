<section class="row container-fluid">
    <img src="/images/PLACEHOLDER.jpg" class="col-md-2 rounded img-thumbnail img-fluid">
    <div class="col-md-auto p-2">
        <h2>Admin</h2>
        <p class="text-break">Admin</p>
    </div>
</section>
<section class="row container-fluid p-4">
    <p class="h3">Admin Tools</p>
    <div class="col-12">
        <form method="POST" action="/admin/creategenre">
            <label for="genreText">Input Parent Genre</label>
            <input type="text" name="genreText" id="genreText" value="Genre">
            <input type="hidden" value="{{csrfToken}}" name="_csrf">
            <input class="btn btn-primary" type="submit" value="Create Parent Genre">
        </form>
    </div>
    <div class="col-12">
        <form method="POST" action="/admin/createsubgenre">
            <label for="parentGenre">Choose Parent Genre</label>
            <select name="parentGenre" id="parentGenre">
                {{#each parentGenres}}
                <option value={{this.genre_name}}>{{this.genre_name}}</option>
                {{/each}}
            </select>
            <label for="subGenreText">Input New Sub Genre</label>
            <input type="text" name="subGenreText" id="subGenreText">
            <input type="hidden" value="{{csrfToken}}" name="_csrf">
            <input class="btn btn-primary" type="submit" value="Create Sub Genre">
        </form>
    </div>
    <div class="col-12">
        <form action="/admin/createinstrument" method="POST">
            <label for="instrumentText">Input New Instrument</label>
            <input type="text" name="instrumentText" id="instrumentText">
            <input type="hidden" value="{{csrfToken}}" name="_csrf">
            <input class="btn btn-primary" type="submit" value="Create Sub Genre">
        </form>
    </div>
</section>