<div class="row m-3">
<!--SIGN IN-->
<section class="col-md-6">
    <p class="display-4 text-center">Sign in</p>
    <form>
        <div class="form-group">
            <label for="signin_username">Username</label>
            <input class="form-control" type="text" id="signin_username">
        </div>
        <div class="form-group">
            <label for="signin_password">Password</label>
            <input class="form-control" type="password" id="signin_password">
        </div>
        <input class="btn btn-primary" type="submit" value="Log in">
    </form>
</section>
<!--SIGN UP-->
<section class="col-md-6">
    <p class="display-4 text-center">Sign up</p>
    <form method="POST" action="account/create">
        <div class="form-group">
            <label for="signup_username">Username</label>
            <input class="form-control" type="text" id="signup_username" name="username">
        </div>
        <div class="form-group">
            <label for="signup_password">Password</label>
            <input class="form-control" type="password" id="signup_password" name="password">
        </div>
        <div class="form-group">
            <label for="signup_passwordrepeat">Repeat</label>
            <input class="form-control" type="password" id="signup_passwordrepeat">
        </div>
        <input class="btn btn-primary" type="submit" value="Create account">
    </form>
</section>
</div>